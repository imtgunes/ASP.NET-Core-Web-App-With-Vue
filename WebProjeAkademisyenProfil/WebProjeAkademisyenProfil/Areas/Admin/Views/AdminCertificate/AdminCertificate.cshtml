    <script>

        const { createApp, ref, computed } = Vue;
        const app = createApp({

            data() {

                return {
                    veriler: null,
                    sertifikalar: null,
                    selectedValue: '',
                    sertifikaId: null,
                    sertifikaKapsam: null,
                    sertifikaAdi: null,
                    sertifikaBilgi: null,
                    sertifikaBasTar: null,
                    sertifikaBitTar: null,

                }
            },
            mounted() {

            },
            watch: {
                selectedValue(newValue) {
                    axios
                        .get('https://localhost:7210/Certificate/Certificate/' + newValue)
                        .then((response) => {
                            this.veriler = response.data;
                        });
                }

            },
            methods: {
                myFunction(certificateId) {

                    axios
                        .get('https://localhost:7210/Certificate/Certificate/Certificate/' + certificateId)
                        .then((response) => {
                            console.log(response.data);
                            this.sertifikalar = response.data;
                            this.sertifikaId = response.data[0].certificateId;
                            this.sertifikaKapsam = response.data[0].certificateScope;
                            this.sertifikaAdi = response.data[0].certificateName;
                            this.sertifikaBilgi = response.data[0].certificateInfo;
                            this.sertifikaBasTar = response.data[0].certificateDateStart;
                            this.sertifikaBitTar = response.data[0].certificateDateEnd;


                        });
                },
                onSubmit() {
                    if (!this.sertifikaKapsam || !this.sertifikaAdi || !this.sertifikaBilgi || !this.sertifikaBasTar || !this.sertifikaBitTar) {
                        alert("Lütfen boş bilgi bırakmayınız!");
                    }
                    else {
                        axios.put('https://localhost:7210/Certificate/Certificate/Certificate/', {
                            CertificateId: this.sertifikaId,
                            AcademicianId: this.selectedValue,
                            CertificateScope: this.sertifikaKapsam,
                            CertificateName: this.sertifikaAdi,
                            CertificateInfo: this.sertifikaBilgi,
                            CertificateDateStart: this.sertifikaBasTar,
                            CertificateDateEnd: this.sertifikaBitTar,

                        }).then(function (response) {
                            alert("Sertifika başarıyla düzenlendi!");
                            location.reload();
                            console.log(response);
                        }).catch(function (error) {
                            alert("Sertifika düzenlenirken hata oluştu!");
                            location.reload();
                            console.log(error);
                        });
                    }

                },
                deleteItem(id) {

                    axios.delete('https://localhost:7210/Certificate/Certificate/Certificate/' + id)
                        .then(response => {
                            alert("Sertifika başarıyla silindi!");
                            location.reload();
                            console.log(response);
                        })
                        .catch(error => {
                            alert("Sertifika silinirken bir hata oluştu!");
                            location.reload();
                            console.log(error);
                        });
                },
                logOut() {
                    axios.post('https://localhost:7210/Admin/Login/UserLogOut')
                        .then(response => {
                            console.log(response.data);

                        })
                        .catch(error => {

                            console.log(error);

                        });

                },
            }




        });
        app.mount("#adminCertificate");


    </script>

